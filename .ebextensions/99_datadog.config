# .ebextensions/99datadog.config
option_settings:
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_AGENT_MAJOR_VERSION
      value: "7"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_AGENT_MINOR_VERSION
      value: "" # Eg: 34 to install 7.34.x, leave empty to install the latest 7.x
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_AGENT_HOST
      value: "172.17.0.1"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_CONTAINER_LABELS_AS_TAGS
      value: "true"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_CONTAINER_ENV_AS_TAGS
      value: "true"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_COLLECT_EC2_TAGS
      value: "true"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_LOGS_ENABLED
      value: "true"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL
      value: "true"
    - namespace: aws:elasticbeanstalk:application:environment
      option_name: DD_CONTAINER_EXCLUDE_LOGS
      value: "name:datadog-agent"


files:
  "/etc/datadog-agent/datadog.yaml":
    mode: "000640"
    owner: root # will be changed to dd-agent after the installation
    group: root
    content: |
      # Add here the Agent configuration
      api_key: "{API_KEY}"
      site: datadoghq.com
      config_providers:
        - name: docker
          polling: true
      autoconfig_include_features:
        - docker
      process_config:
        enabled: "true"
      apm_config:
        enabled: "true"
        apm_non_local_traffic: "true"

  "/etc/datadog-agent/conf.d/docker.d/conf.yaml":
    mode: "000644"
    owner: root # will be changed to dd-agent after the installation
    group: root
    content: |
      # Add here the Agent configuration
      ad_identifiers:
        - _docker
      init_config:
      instances:
        -
          collect_events: true
          collect_exit_codes: true

  "/datadog_install_script.sh":
    mode: "000700"
    owner: root
    group: root
    source: https://s3.amazonaws.com/dd-agent/scripts/install_script.sh

container_commands:
    05setup_datadog:
        command: "DD_API_KEY=unused /datadog_install_script.sh; sed -i 's/ install_script/ ebs_install_script/' /etc/datadog-agent/install_info"
